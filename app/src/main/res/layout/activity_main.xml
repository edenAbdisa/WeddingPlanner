<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ebookfrenzy.secondappweddingplanner.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/linearlayout_fragment_area">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:orientation="horizontal"
        tools:background="@android:color/holo_green_dark">

        <Button
            android:id="@+id/imageview_list_people"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:shadowColor="@color/colorPrimary"
            android:text="Contacts" />

        <Button
            android:id="@+id/imageview_list_venue"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Venue" />

        <Button
            android:id="@+id/imageview_list_color"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cloth" />

        <Button
            android:id="@+id/imageview_list_food"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Foods" />

        <Button
            android:id="@+id/imageview_checklist"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Notes" />
    </LinearLayout>

</LinearLayout>
